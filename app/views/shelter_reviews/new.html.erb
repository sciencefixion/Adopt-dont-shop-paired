<h1>Create a new shelter review</h1>
<br>
<%= form_tag("/shelters/#{@shelter_id}/shelter_reviews", method: :post) do %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <br>
  <%= label_tag :title %><br/>
  <%= text_field_tag :title %><br/>
  <br>
  <%= label_tag :rating %><br/>
  <%= text_field_tag :rating %><br/>
  <br>
  <%= label_tag :content %><br/>
  <%= text_field_tag :content %><br/>
  <br>
  <%= label_tag :image %><br/>
  <%= text_field_tag :image %><br/>
  <br>
  <%= submit_tag "Create New Shelter Review" %>
<% end %>
