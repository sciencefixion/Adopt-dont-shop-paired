<h1><%=  "#{@application.name}'s Application" %></h1>

<p><%= @application.address %></p>
<p><%= @application.city %></p>
<p><%= @application.state %></p>
<p><%= @application.zip %></p>
<p><%= @application.phone_number %></p>
<p><%= @application.description %></p>

<% @pets.each do |pet| %>
  <%= link_to "#{pet.name}'s Information", "/pets/#{pet.id}" %>
  <% if pet.adoptable? %>
    <p><%= link_to "Approve Application for #{pet.name}", "/applicationpets/#{pet.id}", method: :patch %></p>
  <% else %>
    <p><%= link_to "Revoke Application for #{pet.name}", "/applicationpets/#{pet.id}", method: :patch %></p>
  <% end %>
<% end %>
